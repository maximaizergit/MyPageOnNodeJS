<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include ('./partials/nav.ejs') %>
    <h1>Posts:</h1>
    <ul>
      <% if (posts.length){ %> <% posts.forEach(({ id, title, date, text,
      author})=>{%>
      <li>
        <article>
          <h2>
            <a href="/posts/1"><%= title %></a>
          </h2>
          <p><%= text %></p>
          <div class="info">
            <span><%= date %></span>
            <span><%= author %></span>
          </div>
        </article>
      </li>
      <% }) %> <% } %>
    </ul>
  </body>
</html>
